{
  "name": "persian",
  "description": "A Persian flashcard app written with React, Express, and MongoDB",
  "version": "0.4.0",
  "author": {
    "name": "Andrew Herriot"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.x"
  },
  "dependencies": {
    "@google-cloud/error-reporting": "^0.2.2",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "compression": "^1.7.1",
    "express": "^4.16.1",
    "formik": "^0.9.4",
    "jsonwebtoken": "^8.0.1",
    "jwt-decode": "^2.2.0",
    "mongoose": "^4.12.0",
    "postcss-cli": "^4.1.1",
    "postcss-custom-properties": "^6.2.0",
    "prop-types": "15.6.2",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-ga": "^2.3.5",
    "react-modal": "^3.0.4",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.14",
    "react-virtualized": "^9.10.1",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "yes-https": "^0.0.4"
  },
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "start:client": "react-scripts start",
    "start:server": "nodemon --ignore '*.test.js' --watch server server/server.js",
    "start:server:test": "NODE_ENV=test node server/server.js",
    "build": "react-scripts build",
    "postbuild": "postcss --use postcss-custom-properties --replace build/**/*.css",
    "test:client": "react-scripts test --env=jsdom",
    "test:server": "./before_test.sh && mocha 'server/server.test.js'",
    "eject": "react-scripts eject"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:3001"
    }
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "superagent": "^3.6.3"
  }
}
