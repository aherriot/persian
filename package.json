{
  "name": "persian",
  "version": "0.5.0",
  "author": {
    "name": "Andrew Herriot"
  },
  "license": "MIT",
  "description": "A Persian flashcard app written with React, Express, and MongoDB",
  "private": true,
  "engines": {
    "node": ">=8.x"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "formik": "^1.5.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.4.10",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-modal": "^3.8.1",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
    "react-virtualized": "^9.21.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "workbox-build": "^3.6.3",
    "yes-https": "^0.0.4"
  },
  "proxy": "http://localhost:3001",
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "start:client": "react-scripts start",
    "start:server": "nodemon --ignore '*.test.js' --watch server server/server.js",
    "start:server:test": "NODE_ENV=test node server/server.js",
    "build": "react-scripts build",
    "build-sw": "node ./src/serviceWorker/sw-build.js",
    "postbuild": "yarn run build-sw",
    "test:client": "react-scripts test --env=jsdom",
    "test:server": "./before_test.sh && jest 'server/server.test.js'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "nodemon": "^1.18.10",
    "superagent": "^4.1.0"
  }
}
