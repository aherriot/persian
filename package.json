{
  "name": "persian",
  "description":
    "A Persian flashcard app written with React, Express, and MongoDB",
  "version": "0.4.0",
  "author": {
    "name": "Andrew Herriot"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.1",
    "jsonwebtoken": "^8.0.1",
    "mongoose": "^4.12.0",
    "morgan": "^1.9.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "1.0.14"
  },
  "scripts": {
    "start:client": "react-scripts start",
    "start:server":
      "nodemon --ignore '*.test.js' --watch server server/index.js",
    "build": "react-scripts build",
    "test:client": "react-scripts test --env=jsdom",
    "test:server": "mocha 'server/**/*.test.js'",
    "eject": "react-scripts eject"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:3001"
    }
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "superagent": "^3.6.3"
  }
}
